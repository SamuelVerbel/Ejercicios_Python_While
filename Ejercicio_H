N = int(input("Ingrese la cantidad de números: "))
positivos = 0
negativos = 0
ceros = 0
contador = 0
while contador < N:
    numero = float(input("Ingrese un número: "))
    if numero > 0:
        positivos += 1
    elif numero < 0:
        negativos += 1
    else:
        ceros += 1
    contador += 1
print("Positivos:", positivos)
print("Negativos:", negativos)
print("Ceros:", ceros)
